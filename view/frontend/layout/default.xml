<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <block class="CleverAge\Tools\Block\Head\VersionMeta"
                   name="cleverage_tools_version_meta"
                   template="CleverAge_Tools::version-meta.phtml" />
        </referenceBlock>
        <referenceContainer name="before.body.end">
            <block name="cleverage_tools_version_banner"
                       class="CleverAge\Tools\Block\VersionBanner"
                       template="CleverAge_Tools::version-banner.phtml"
                       after="-" />
        </referenceContainer>
    </body>
</page>
